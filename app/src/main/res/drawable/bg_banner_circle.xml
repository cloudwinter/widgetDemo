<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/bg_circle_selected"></solid>
            <stroke android:color="@color/bg_circle_selected"></stroke>
            <size android:width="5dp" android:height="5dp"></size>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="oval">
            <solid android:color="@color/bg_circle_unselected"></solid>
            <stroke android:color="@color/bg_circle_selected"></stroke>
            <size android:width="5dp" android:height="5dp"></size>
        </shape>
    </item>

</selector>