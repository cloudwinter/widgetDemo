<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/view_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.summer.demo.camera.widget.CameraShadeView
        android:id="@+id/view_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:hollow_gravity="bottom"
        app:hollow_margin_bottom="200dp"
        app:hollow_margin_left="50dp"
        app:hollow_margin_right="50dp"
        app:hollow_shape="square" />

    <com.summer.demo.widget.FixRatioRelativeLayout
        android:id="@+id/fram_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/plf_saomiao">

        <ImageView
            android:id="@+id/img_scan_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/plf_scan_net"
            android:visibility="gone" />

    </com.summer.demo.widget.FixRatioRelativeLayout>


</RelativeLayout>