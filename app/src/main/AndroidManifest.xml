<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.summer.demo">


    <!-- 网络权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 照相 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 允许程序写入存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <!-- 添加权限 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- sdcard中读写数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 绘制 -->
        <activity
            android:name=".draw.ui.DrawActivity"
            android:screenOrientation="portrait"></activity>

        <!-- 裁剪 -->
        <activity android:name=".crop.CropActivity"></activity>

        <!-- 相机 -->
        <activity android:name=".camera.ui.CustomCameraActivity"></activity>
        <activity android:name=".camera.ui.DecodeActivity"></activity>

        <!-- 动画 -->
        <activity android:name=".animation.ui.FrameAnimationActivity"></activity>
        <activity android:name=".animation.ui.TweenAnimationActivity"></activity>
        <activity android:name=".animation.ui.PropertyAnimationActivity"></activity>

        <!-- mvp -->
        <activity android:name=".mvp.view.MVPActivity"></activity>

        <!-- 横向的listView -->
        <activity android:name=".listview.ui.ListActivity"></activity>

        <!-- 注解 -->
        <activity android:name=".annotation.ui.AnnotationActivity"></activity>

        <!-- touch事件分发 -->
        <activity android:name=".touch.TouchEventActivity"></activity>

        <!-- okhttp+handler -->
        <activity android:name=".http.OKHttpTestActivity"></activity>

        <!--bannerview -->
        <activity android:name=".banner.ui.BannerActivity"></activity>

        <meta-data
            android:name="UMEEG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}"></meta-data>

    </application>

</manifest>